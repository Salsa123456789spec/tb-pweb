<section class="p-6">
  <h2 class="text-2xl font-semibold mb-6">Form Penilaian Tugas</h2>

  

  <div class="bg-white rounded-lg shadow p-6 max-w-xl mx-auto">
    <form action="/aslab/penilaianMagang/<%= pengumpulan.id %>" method="POST">
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">Nama Mahasiswa</label>
        <p class="text-gray-900 font-semibold"><%= pengumpulan.pendaftaran.user.name %></p>
      </div>

      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">NIM</label>
        <p class="text-gray-900"><%= pengumpulan.pendaftaran.user.nim %></p>
      </div>

      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">Divisi</label>
        <p class="text-gray-900"><%= pengumpulan.pendaftaran.divisi %></p>
      </div>

      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">Judul Tugas</label>
        <p class="text-gray-900"><%= pengumpulan.tugas.judul %></p>
      </div>

      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">File Tugas</label>
        <a href="/uploads/<%= pengumpulan.file %>" target="_blank" class="text-blue-600 hover:underline">Lihat File</a>
      </div>

      <div class="mb-4">
        <label for="nilai" class="block text-sm font-medium text-gray-700 mb-1">Nilai</label>
        <input type="number" name="nilai" id="nilai" step="0.01" min="0" max="100"
               value="<%= pengumpulan.nilai ?? '' %>"
               class="w-full px-3 py-2 border rounded-md shadow-sm focus:ring-green-600 focus:border-green-600" required>
      </div>

      <div class="mb-6">
        <label for="catatan" class="block text-sm font-medium text-gray-700 mb-1">Catatan</label>
        <textarea name="catatan" id="catatan" rows="4"
                  class="w-full px-3 py-2 border rounded-md shadow-sm focus:ring-green-600 focus:border-green-600"><%= pengumpulan.catatan ?? '' %></textarea>
      </div>

      <div class="text-right">
        <button type="submit" class="bg-green-700 hover:bg-green-800 text-white px-4 py-2 rounded-md font-semibold">
          Simpan Nilai
        </button>
      </div>
    </form>
  </div>
</section>
