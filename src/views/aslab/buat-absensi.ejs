<div class="bg-white p-6 rounded-lg shadow-md mb-8">
    <h2 class="text-2xl font-bold mb-4 text-gray-800">Buat Sesi Absensi</h2>
    <form action="/aslab/absensi" method="POST">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
            <div>
                <label for="pertemuan" class="block text-sm font-medium text-gray-700">Pertemuan Ke-</label>
                <select name="pertemuan" id="pertemuan" required
                    class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    <option value="" disabled selected>-- Pilih Pertemuan --</option>
                    <% for(let i=1; i <=8; i++) { %>
                    <option value="<%= i %>">Pertemuan <%= i %></option>
                    <% } %>
                </select>
            </div>
            <div>
                <label for="tanggal" class="block text-sm font-medium text-gray-700">Tanggal</label>
                <input type="date" name="tanggal" id="tanggal" required
                    class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            </div>
        </div>
        <div class="mb-6">
            <label for="pembahasan" class="block text-sm font-medium text-gray-700">Pembahasan</label>
            <textarea name="pembahasan" id="pembahasan" rows="4" required
                class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                placeholder="Contoh: Pengenalan Materi Dasar Programming"></textarea>
        </div>
        <div>
            <button type="submit"
                class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                Buat Tabel Absensi
            </button>
        </div>
    </form>
</div>

<div class="mt-8">
    <h2 class="text-xl font-semibold mb-4 text-gray-800">Riwayat Absensi</h2>
    <div class="overflow-x-auto bg-white rounded-lg shadow">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Pertemuan
                    </th>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Tanggal
                    </th>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Pembahasan
                    </th>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Peserta Hadir
                    </th>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Aksi
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (typeof riwayat !=='undefined' && riwayat.length > 0) { %>
                <% riwayat.forEach(item=> { %>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        Pertemuan <%= item.pertemuan %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <%= item.tanggal %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">
                        <%= item.pembahasan || 'Tidak ada pembahasan' %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <span class="font-semibold"><%= item.jumlahHadir %></span> / <%= item.totalMahasiswa %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <a href="/aslab/absensi/edit/<%= item.pertemuan %>" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                    </td>
                </tr>
                <% }) %>
                <% } else { %>
                <tr>
                    <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">
                        Belum ada riwayat absensi.
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>