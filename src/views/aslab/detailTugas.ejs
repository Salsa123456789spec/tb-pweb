<div class="min-h-screen bg-gray-100 py-8 px-4">
  <div class="max-w-2xl mx-auto bg-white p-8 rounded shadow">
    <h1 class="text-2xl font-bold mb-6 text-gray-800">Detail Tugas</h1>

    <form action="/aslab/tugas/update/<%= tugas.id %>" method="POST">
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700">Judul</label>
        <input type="text" name="judul" value="<%= tugas.judul %>" required
          class="mt-1 block w-full rounded border-gray-300 focus:ring-green-500 focus:border-green-500" />
      </div>

      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700">Deskripsi</label>
        <textarea name="deskripsi" rows="4" required
          class="mt-1 block w-full rounded border-gray-300 focus:ring-green-500 focus:border-green-500"><%= tugas.deskripsi %></textarea>
      </div>

      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700">Deadline</label>
        <input type="datetime-local" name="deadline"
          value="<%= new Date(tugas.deadline).toISOString().slice(0,16) %>" required
          class="mt-1 block w-full rounded border-gray-300 focus:ring-green-500 focus:border-green-500" />
      </div>

      <div class="flex justify-end">
        <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
          Simpan Perubahan
        </button>
      </div>
    </form>
  </div>
</div>
