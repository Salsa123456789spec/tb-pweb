<div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit FAQ</h1>
  
    <form method="POST" action="/aslab/faq/<%= faq.id %>/edit" class="space-y-6">
      <!-- Input Pertanyaan -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Pertanyaan</label>
        <input 
          type="text" 
          name="pertanyaan" 
          value="<%= faq.pertanyaan %>" 
          class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
          required
        >
      </div>
  
      <!-- Input Jawaban -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Jawaban</label>
        <textarea 
          name="jawaban" 
          rows="5"
          class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
          required
        ><%= faq.jawaban %></textarea>
      </div>
  
      <!-- Tombol Aksi -->
      <div class="flex justify-between">
        <a href="/aslab/faq" 
           class="inline-flex items-center text-gray-600 hover:text-gray-900 font-medium transition-colors">
          <i class="fas fa-arrow-left mr-2"></i>
          Batal
        </a>
        <button 
          type="submit"
          class="bg-blue-600 text-white px-5 py-2 rounded-md hover:bg-blue-700 transition"
        >
          Update
        </button>
      </div>
    </form>
  </div>
  