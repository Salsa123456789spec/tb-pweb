<div class="container mx-auto p-4">
    <!-- Header -->
    <div class="mb-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold text-gray-800 mb-1">Manajemen FAQ</h1>
        <p class="text-gray-600">Tambah, edit, dan kelola pertanyaan yang sering diajukan</p>
      </div>
      <div class="flex flex-col sm:flex-row gap-2 sm:items-center">
        <!-- Input pencarian -->
        <input type="text" id="searchFaq" placeholder="Cari pertanyaan..." 
          class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 w-full sm:w-96" />
  
        <!-- Tombol tambah FAQ -->
        <a href="/aslab/faq/create"
           class="bg-blue-600 text-white px-5 py-2 rounded-md hover:bg-blue-700 transition text-center">
          + Tambah FAQ
        </a>
      </div>
    </div>
  
    <!-- Daftar FAQ -->
    <% if (faqs.length > 0) { %>
      <div id="faq-container" class="space-y-4">
        <% faqs.forEach(faq => { %>
          <div class="border rounded-lg shadow hover:shadow-md transition p-6 bg-white faq-item">
            <h3 class="text-lg font-semibold text-gray-800 mb-2"><%= faq.pertanyaan %></h3>
            <p class="text-gray-700 whitespace-pre-line mb-4"><%= faq.jawaban %></p>
            <div class="flex space-x-2">
              <a href="/aslab/faq/<%= faq.id %>/edit"
                class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded text-sm font-medium inline-flex items-center">
                <span class="material-icons text-sm mr-1">edit</span> Edit
              </a>
              <form action="/aslab/faq/<%= faq.id %>/delete" method="POST" class="inline">
                <button type="submit" onclick="return confirm('Yakin ingin menghapus FAQ ini?')"
                  class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded text-sm font-medium inline-flex items-center">
                  <span class="material-icons text-sm mr-1">delete</span> Hapus
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center py-12">
        <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <span class="material-icons text-gray-400 text-4xl">live_help</span>
        </div>
        <h3 class="text-lg font-semibold text-gray-600 mb-2">Belum Ada FAQ</h3>
        <p class="text-gray-500">Silakan tambahkan FAQ baru menggunakan tombol di atas.</p>
      </div>
    <% } %>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const searchInput = document.getElementById('searchFaq');
      const faqItems = document.querySelectorAll('.faq-item');
  
      searchInput.addEventListener('input', function () {
        const keyword = this.value.toLowerCase();
  
        faqItems.forEach(item => {
          const pertanyaan = item.querySelector('h3').textContent.toLowerCase();
          item.style.display = pertanyaan.includes(keyword) ? '' : 'none';
        });
      });
    });
  </script>
    