<div class="container mx-auto p-6">
    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Verifikasi</h1>
        <p class="text-sm text-gray-500">Verifikasi > Lihat Detail</p>
    </div>

    <a href="/aslab/verifikasi" class="inline-flex items-center gap-2 text-green-600 hover:text-green-800 mb-6">
        <i class="fas fa-arrow-left"></i>
        <span>Kembali ke Daftar Verifikasi</span>
    </a>

    <% if (pendaftar) { %>
        <!-- Card Pendaftar -->
        <div class="bg-white p-6 rounded-lg shadow-md mb-8">
            <div class="flex items-center gap-6">
                <div class="w-20 h-20 rounded-full bg-gray-200 flex items-center justify-center text-green-600 text-3xl font-bold">
                    <%= pendaftar.user.name.charAt(0).toUpperCase() %>V
                </div>
                <div>
                    <h2 class="text-2xl font-bold"><%= pendaftar.user.name %></h2>
                    <p class="text-gray-600"><%= pendaftar.divisi %></p>
                    <!-- Status Badge -->
                    <span class="inline-block mt-2 px-4 py-1 text-xs font-semibold rounded-full
                        <% if (pendaftar.status === 'diterima') { %>bg-green-100 text-green-800<% } else if (pendaftar.status === 'ditolak') { %>bg-red-100 text-red-800<% } else { %>bg-yellow-100 text-yellow-800<% } %>">
                        Status: <%= pendaftar.status.charAt(0).toUpperCase() + pendaftar.status.slice(1) %>
                    </span>
                </div>
            </div>
        </div>

        <!-- Dokumen -->
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-bold mb-6 flex items-center gap-3">
                <i class="fas fa-folder-open text-green-600"></i>
                Dokumen yang di upload
            </h3>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <!-- CV -->
                <a href="/<%= pendaftar.CV_file %>" target="_blank" class="block border rounded-lg p-4 text-center hover:shadow-lg transition-shadow">
                    <i class="fas fa-file-pdf text-5xl text-red-500 mb-4"></i>
                    <h4 class="font-bold">CV</h4>
                    <p class="text-sm text-gray-500">PDF</p>
                </a>
                <!-- KHS -->
                <a href="/<%= pendaftar.KHS_file %>" target="_blank" class="block border rounded-lg p-4 text-center hover:shadow-lg transition-shadow">
                    <i class="fas fa-file-pdf text-5xl text-red-500 mb-4"></i>
                    <h4 class="font-bold">KHS</h4>
                    <p class="text-sm text-gray-500">PDF</p>
                </a>
                <!-- KRS -->
                <a href="/<%= pendaftar.KRS_file %>" target="_blank" class="block border rounded-lg p-4 text-center hover:shadow-lg transition-shadow">
                    <i class="fas fa-file-pdf text-5xl text-red-500 mb-4"></i>
                    <h4 class="font-bold">KRS</h4>
                    <p class="text-sm text-gray-500">PDF</p>
                </a>
                <!-- Surat Permohonan -->
                <a href="/<%= pendaftar.surat_permohonan_file %>" target="_blank" class="block border rounded-lg p-4 text-center hover:shadow-lg transition-shadow">
                    <i class="fas fa-file-pdf text-5xl text-red-500 mb-4"></i>
                    <h4 class="font-bold">Surat Permohonan</h4>
                    <p class="text-sm text-gray-500">PDF</p>
                </a>
            </div>
        </div>

        <!-- Tombol Aksi -->
        <% if (pendaftar.status === 'menunggu') { %>
        <div class="flex justify-center gap-6 mt-10">
            <form action="/aslab/verifikasi/terima/<%= pendaftar.id %>" method="POST">
                <button type="submit" class="bg-green-600 text-white font-bold py-3 px-10 rounded-lg hover:bg-green-700 transition-colors">
                    Terima Dokumen
                </button>
            </form>
            <form action="/aslab/verifikasi/tolak/<%= pendaftar.id %>" method="POST">
                <button type="submit" class="bg-red-600 text-white font-bold py-3 px-10 rounded-lg hover:bg-red-700 transition-colors">
                    Tolak Dokumen
                </button>
            </form>
        </div>
        <% } %>

    <% } else { %>
        <div class="text-center py-20">
            <p class="text-gray-500">Pendaftar tidak ditemukan.</p>
        </div>
    <% } %>
</div> 