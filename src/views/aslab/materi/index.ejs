<div class="container mx-auto p-4">
  <div class="mb-6 flex flex-col md:flex-row md:items-center md:justify-between">
      <div>
          <h1 class="text-2xl font-bold text-gray-800 mb-2">Kelola Materi Magang</h1>
          <p class="text-gray-600">Berikut daftar materi pembelajaran untuk peserta magang LEA</p>
      </div>
      <a href="/aslab/materi/tambah" 
         class="mt-4 md:mt-0 bg-green-600 text-white px-5 py-2 rounded-md hover:bg-green-700 transition">
          + Tambah Materi Baru
      </a>
  </div>

  <% if (materi && materi.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% materi.forEach(item => { %>
              <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 border border-gray-200">
                  <div class="p-6">
                      <div class="flex items-center mb-4">
                          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                              <span class="material-icons text-green-600">description</span>
                          </div>
                          <div>
                              <h3 class="text-lg font-semibold text-gray-800"><%= item.judul %></h3>
                              <p class="text-sm text-gray-500">
                                  <%= new Date(item.tanggal_upload).toLocaleDateString('id-ID', { 
                                      day: 'numeric', 
                                      month: 'long', 
                                      year: 'numeric' 
                                  }) %>
                              </p>
                          </div>
                      </div>

                      <p class="text-gray-600 mb-4 line-clamp-3"><%= item.deskripsi %></p>

                      <div class="flex flex-col gap-2">
                          <% if (item.file) { %>
                              <a href="/uploads/<%= item.file %>" 
                                 class="bg-green-500 text-white px-4 py-2 rounded-md text-center hover:bg-green-600 transition"
                                 target="_blank">
                                  <span class="material-icons text-sm align-middle mr-1">download</span> Download
                              </a>
                          <% } %>

                          <a href="/aslab/materi/edit/<%= item.id %>" 
                             class="bg-blue-500 text-white px-4 py-2 rounded-md text-center hover:bg-blue-600 transition">
                              <span class="material-icons text-sm align-middle mr-1">edit</span> Edit
                          </a>

                          <form action="/aslab/materi/hapus/<%= item.id %>" method="POST"
                                onsubmit="return confirm('Yakin ingin menghapus materi ini?')">
                              <button type="submit"
                                      class="w-full bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition">
                                  <span class="material-icons text-sm align-middle mr-1">delete</span> Hapus
                              </button>
                          </form>
                      </div>
                  </div>
              </div>
          <% }) %>
      </div>
  <% } else { %>
      <div class="text-center py-12">
          <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="material-icons text-gray-400 text-4xl">folder_open</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-600 mb-2">Belum Ada Materi</h3>
          <p class="text-gray-500">Silakan tambahkan materi baru dengan tombol di atas.</p>
      </div>
  <% } %>
</div>

<style>
.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>
