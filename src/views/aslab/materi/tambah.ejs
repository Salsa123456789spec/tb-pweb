<div class="container mx-auto p-4">
  <div class="mb-6">
      <a href="/aslab/materi" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-4">
          <span class="material-icons mr-2">arrow_back</span>
          Kembali ke Daftar Materi
      </a>
      <h1 class="text-2xl font-bold text-gray-800 mb-2"><%= title %></h1>
      <p class="text-gray-600">Isi formulir di bawah untuk <%= title.toLowerCase() %>.</p>
  </div>

  <form method="POST" enctype="multipart/form-data" class="bg-white rounded-lg shadow-md border border-gray-200 p-6 space-y-6">
      <div>
          <label class="block text-gray-700 font-semibold mb-2">Judul</label>
          <input type="text" name="judul" class="w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-green-400" 
                 value="<%= materi?.judul || '' %>" required>
      </div>

      <div>
          <label class="block text-gray-700 font-semibold mb-2">Deskripsi</label>
          <textarea name="deskripsi" rows="4" class="w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-green-400" required><%= materi?.deskripsi || '' %></textarea>
      </div>

      <div>
          <label class="block text-gray-700 font-semibold mb-2">File PDF</label>
          <input type="file" name="file" class="w-full border border-gray-300 rounded-md p-2" accept=".pdf">
          <% if (materi?.file) { %>
              <p class="text-sm text-gray-500 mt-2">File sebelumnya: <%= materi.file %></p>
          <% } %>
      </div>

      <div class="flex justify-end space-x-4">
          <a href="/aslab/materi" class="bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-600 transition">
              Batal
          </a>
          <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-700 transition">
              Simpan
          </button>
      </div>
  </form>
</div>
