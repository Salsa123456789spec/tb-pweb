<header class="top-bar flex h-[70px] flex-shrink-0 items-center justify-between bg-white px-8 shadow-sm">
    <div class="top-bar-title flex items-center gap-3 text-xl font-semibold text-green-600">
        <i class="fa-solid fa-table-list"></i>
        <h1><%= title %></h1>
    </div>
    
    <div class="user-info flex items-center gap-4">
        <span>Halo, <%= user.name %></span>
        <div class="user-avatar flex h-10 w-10 items-center justify-center rounded-full bg-green-600 font-bold text-white">
            <%= user.name.charAt(0).toUpperCase() %>
        </div>
    </div>
</header>