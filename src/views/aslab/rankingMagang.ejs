<section class="p-6 max-w-3xl mx-auto">
  <h2 class="text-2xl font-bold text-center text-green-800 mb-8">🏆 Ranking Mahasiswa Terbaik</h2>

  <ul class="space-y-4">
    <% hasil.forEach(item => { %>
      <li class="flex items-center justify-between bg-white shadow-md rounded-xl px-6 py-4 hover:bg-green-50 transition">
        <div class="flex items-center gap-4">
          <div class="text-2xl font-bold text-green-700 w-8 text-center"><%= item.no %></div>
          <div>
            <div class="text-lg font-semibold"><%= item.nama %></div>
            <div class="text-sm text-gray-500"><%= item.nim %> • <%= item.divisi %></div>
          </div>
        </div>
        <div class="text-lg font-bold text-gray-700"><%= item.rataRataNilai %></div>
      </li>
    <% }) %>
  </ul>
</section>