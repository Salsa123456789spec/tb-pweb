<div class="p-6 bg-gray-50 min-h-screen">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-green-700">Rekapitulasi Absensi</h1>
            <p class="text-md text-gray-600">Total kehadiran mahasiswa magang dari seluruh pertemuan.</p>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-green-700">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">NIM</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Nama</th>
                        <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-white uppercase tracking-wider">Hadir</th>
                        <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-white uppercase tracking-wider">Tidak Hadir</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (rekapData && rekapData.length > 0) { %>
                        <% rekapData.forEach(item => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.nim %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= item.nama %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 font-bold text-center"><%= item.jumlah_hadir %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600 font-bold text-center"><%= item.jumlah_tidak_hadir %></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="px-6 py-12 text-center text-sm text-gray-500">
                                Data rekap absensi belum tersedia.
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>