<div class="p-6 bg-gray-50 min-h-screen">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-green-700">Rekapitulasi Absensi</h1>
            <p class="text-md text-gray-600">Total kehadiran mahasiswa magang dari seluruh pertemuan.</p>
        </div>
        <div class="flex items-center space-x-4">
            <a href="/aslab/rekap/absensi/pdf" 
               class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg transition-all duration-200 hover:scale-105 flex items-center space-x-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v3.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V8z" clip-rule="evenodd"></path>
                </svg>
                <span>Download PDF</span>
            </a>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-green-700">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">NIM</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Nama</th>
                        <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-white uppercase tracking-wider">Hadir</th>
                        <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-white uppercase tracking-wider">Tidak Hadir</th>
                        <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-white uppercase tracking-wider">Total Pertemuan</th>
                        <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-white uppercase tracking-wider">Persentase</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (rekapData && rekapData.length > 0) { %>
                        <% rekapData.forEach(item => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.nim %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= item.nama %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 font-bold text-center"><%= item.jumlah_hadir %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600 font-bold text-center"><%= item.jumlah_tidak_hadir %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 font-medium text-center"><%= item.total_pertemuan %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-center">
                                    <% if (item.persentase_kehadiran >= 80) { %>
                                        <span class="text-green-600"><%= item.persentase_kehadiran %>%</span>
                                    <% } else if (item.persentase_kehadiran >= 60) { %>
                                        <span class="text-yellow-600"><%= item.persentase_kehadiran %>%</span>
                                    <% } else { %>
                                        <span class="text-red-600"><%= item.persentase_kehadiran %>%</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center text-sm text-gray-500">
                                Data rekap absensi belum tersedia.
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>