<div class="data-card">
    <div class="card-body p-4 p-md-5">
        <!-- 1. Header Baru di Dalam Kartu -->
        <div class="card-internal-header">
            <a href="/aslab/rekap/pendaftar" class="btn-back-icon">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h4 class="card-internal-title">Detail Pendaftar</h4>
        </div>

        <!-- 2. Header: Avatar (Ikon) dan Nama -->
        <div class="text-center mb-5">
            <div class="detail-avatar-final">
                <i class="fas fa-user"></i>
            </div>
            <h2 class="detail-name-final mt-3"><%= detail.user.name %></h2>
        </div>

        <!-- 3. Detail Informasi (Tata Letak Vertikal) -->
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" value="<%= detail.user.email %>" readonly>
        </div>
        <div class="mb-3">
            <label class="form-label">NIM</label>
            <input type="text" class="form-control" value="<%= detail.user.nim %>" readonly>
        </div>
        <div class="mb-3">
            <label class="form-label">Domisili</label>
            <input type="text" class="form-control" value="<%= detail.domisili %>" readonly>
        </div>
        <div class="mb-3">
            <label class="form-label">Asal</label>
            <input type="text" class="form-control" value="<%= detail.asal %>" readonly>
        </div>
        <div class="mb-4">
            <label class="form-label">No HP</label>
            <input type="text" class="form-control" value="<%= detail.nomor_whatsapp %>" readonly>
        </div>

        <!-- 4. Pilihan Divisi dengan Gambar yang Benar -->
        <div class="mb-4">
            <label class="form-label">Divisi yang Dipilih</label>
            <div class="division-wrapper">
                 <% detail.divisi.split(',').forEach(div => { 
                    const divisionName = div.trim().toLowerCase();
                    let imageUrl = '/img/gambar.png'; // Gambar default

                    if (divisionName.includes('penelitian')) {
                        imageUrl = '/img/litbang.png';
                    } else if (divisionName.includes('pengabdian')) {
                        imageUrl = '/img/pengmas.png';
                    } else if (divisionName.includes('rumah tangga')) {
                        imageUrl = '/img/rumahtangga.png';
                    }
                 %>
                    <div class="division-item">
                        <img src="<%= imageUrl %>" alt="<%= div.trim() %>">
                        <span><%= div.trim() %></span>
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- 5. Dokumen (Tata Letak Sesuai Desain UI) -->
        <div class="mb-4">
            <label class="form-label mb-3">Dokumen Terlampir</label>
            <div class="document-row">
                <label class="document-label">CV</label>
                <div class="input-group">
                    <input type="text" class="form-control" value="<%= detail.CV_file %>" readonly>
                    <a href="/uploads/<%= detail.CV_file %>" target="_blank" class="btn btn-open-doc">OPEN</a>
                </div>
            </div>
            <div class="document-row">
                <label class="document-label">KRS</label>
                <div class="input-group">
                    <input type="text" class="form-control" value="<%= detail.KRS_file %>" readonly>
                    <a href="/uploads/<%= detail.KRS_file %>" target="_blank" class="btn btn-open-doc">OPEN</a>
                </div>
            </div>
            <div class="document-row">
                <label class="document-label">KHS</label>
                <div class="input-group">
                    <input type="text" class="form-control" value="<%= detail.KHS_file %>" readonly>
                    <a href="/uploads/<%= detail.KHS_file %>" target="_blank" class="btn btn-open-doc">OPEN</a>
                </div>
            </div>
            <% if (detail.surat_permohonan_file) { %>
            <div class="document-row">
                <label class="document-label">Surat</label>
                <div class="input-group">
                    <input type="text" class="form-control" value="<%= detail.surat_permohonan_file %>" readonly>
                    <a href="/uploads/<%= detail.surat_permohonan_file %>" target="_blank" class="btn btn-open-doc">OPEN</a>
                </div>
            </div>
            <% } %>
        </div>

        <!-- 6. Alasan Bergabung -->
        <div>
            <label class="form-label">Alasan Bergabung</label>
            <textarea class="form-control" rows="5" readonly><%= detail.alasan || 'Tidak ada alasan yang diberikan.' %></textarea>
        </div>
    </div>
</div>
