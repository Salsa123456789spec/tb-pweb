<div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-800">Rekap Data Pendaftar</h3>
    </div>

    <div class="p-6">
        <div class="flex justify-between items-center mb-4">
            <div class="flex items-center gap-2">
                <label for="show-entries" class="text-sm text-gray-600">Tampilkan</label>
                <select id="show-entries" class="border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 text-sm py-1">
                    <option value="5">5</option>
                    <option value="10" selected>10</option>
                    <option value="15">15</option>
                </select>
                <span class="text-sm text-gray-600">data</span>
            </div>
            <div class="relative">
                <input type="search" id="search-input" placeholder="Cari..." class="border-gray-300 rounded-md shadow-sm pl-3 pr-10 py-2 text-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                <button id="search-button" class="absolute inset-y-0 right-0 flex items-center pr-3">
                    <i class="fa fa-search text-gray-400"></i>
                </button>
            </div>
        </div>

            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">NIM</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nama</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">No HP</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi</th>
                    </tr>
                </thead>
                <tbody id="pendaftar-table-body" class="bg-white divide-y divide-gray-200">
                    <% if(pendaftar.length > 0) { %>
                        <% pendaftar.forEach(p => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800"><%= p.nim %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= p.nama %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= p.no_hp %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                                    <a href="/aslab/rekap/pendaftar/detail/<%= p.id %>" class="py-1 px-3 bg-blue-500 text-white rounded-md text-xs hover:bg-blue-600">Detail</a>
                                    <a href="/aslab/rekap/pendaftar/delete/<%= p.id %>" class="py-1 px-3 bg-red-500 text-white rounded-md text-xs hover:bg-red-600 ml-2" onclick="return confirm('Yakin hapus data ini?');">Hapus</a>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="px-6 py-4 text-center text-sm text-gray-500">Tidak ada data untuk ditampilkan.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="flex justify-between items-center mt-4">
            <p id="pagination-info" class="text-sm text-gray-600"></p>
            <div class="flex items-center">
                <button id="prev-button" class="px-3 py-1 border rounded-l-md text-sm hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed">Sebelumnya</button>
                <div id="page-numbers" class="flex items-center">
                    </div>
                <button id="next-button" class="px-3 py-1 border rounded-r-md text-sm hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed">Selanjutnya</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    // 1. Elemen-elemen yang dibutuhkan
    const searchInput = document.getElementById('search-input');
    const searchButton = document.getElementById('search-button');
    const showEntriesSelect = document.getElementById('show-entries');
    const tableBody = document.getElementById('pendaftar-table-body');
    const allRows = Array.from(tableBody.getElementsByTagName('tr'));
    const prevButton = document.getElementById('prev-button');
    const nextButton = document.getElementById('next-button');
    const pageNumbersContainer = document.getElementById('page-numbers');
    const paginationInfo = document.getElementById('pagination-info');

    // 2. State awal
    let currentPage = 1;
    let rowsPerPage = parseInt(showEntriesSelect.value);
    let filteredRows = allRows;

    // 3. Fungsi utama untuk menampilkan tabel
    function displayTable() {
        allRows.forEach(row => row.style.display = 'none');

        const searchTerm = searchInput.value.toLowerCase();
        filteredRows = allRows.filter(row => row.textContent.toLowerCase().includes(searchTerm));

        const totalPages = Math.ceil(filteredRows.length / rowsPerPage);
        if (currentPage > totalPages) currentPage = totalPages || 1;

        const start = (currentPage - 1) * rowsPerPage;
        const end = start + rowsPerPage;
        const rowsToShow = filteredRows.slice(start, end);
        rowsToShow.forEach(row => row.style.display = '');

        updatePaginationUI(totalPages);
    }

    // 4. Fungsi untuk update UI pagination
    function updatePaginationUI(totalPages) {
        const startEntry = filteredRows.length > 0 ? (currentPage - 1) * rowsPerPage + 1 : 0;
        const endEntry = Math.min(startEntry + rowsPerPage - 1, filteredRows.length);
        paginationInfo.textContent = `Menampilkan ${startEntry} sampai ${endEntry} dari ${filteredRows.length} data`;

        prevButton.disabled = currentPage <= 1;
        nextButton.disabled = currentPage >= totalPages;

        pageNumbersContainer.innerHTML = `<span class="px-3 py-1 border-t border-b bg-blue-500 text-white text-sm">${currentPage}</span>`;
    }

    // 5. Event Listeners
    searchButton.addEventListener('click', () => {
        currentPage = 1;
        displayTable();
    });

    searchInput.addEventListener('keyup', (event) => {
        if (event.key === 'Enter') {
            currentPage = 1;
            displayTable();
        }
    });

    showEntriesSelect.addEventListener('change', () => {
        rowsPerPage = parseInt(showEntriesSelect.value);
        currentPage = 1;
        displayTable();
    });

    nextButton.addEventListener('click', () => {
        if (!nextButton.disabled) {
            currentPage++;
            displayTable();
        }
    });

    prevButton.addEventListener('click', () => {
        if (!prevButton.disabled) {
            currentPage--;
            displayTable();
        }
    });

    // 6. Tampilan awal
    displayTable();
});
</script>