<div class="container mx-auto mt-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold"><%= tugas.judul %></h1>
    <button class="bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-700">Kumpulkan</button>
  </div>

  <div class="bg-gray-100 p-4 rounded-md mb-6">
    <p class="text-gray-600">Belum dikumpulkan</p>
  </div>

  <p class="text-gray-500 mb-8">Jatuh tempo <%= new Date(tugas.deadline).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></p>

  <div class="bg-white p-6 border border-gray-200 rounded-lg shadow-sm mb-8">
    <h2 class="text-xl font-semibold mb-4">Instruksi</h2>
    <p class="text-gray-700">
      <%= tugas.deskripsi %>
    </p>
  </div>

  <div class="bg-white p-6 border border-gray-200 rounded-lg shadow-sm mb-8">
    <h2 class="text-xl font-semibold mb-4">Upload Tugas</h2>
    <div class="border-2 border-dashed border-gray-300 rounded-lg p-10 text-center">
      <p class="text-gray-500">drag and drop file here or <a href="#" class="text-blue-600">Browse Files</a></p>
      <p class="text-sm text-gray-400 mt-2">Max File Size : 20MB</p>
    </div>
  </div>

  <div class="bg-white p-6 border border-gray-200 rounded-lg shadow-sm">
    <h2 class="text-xl font-semibold mb-4">Skor</h2>
    <div class="flex items-center">
      <div class="w-10 h-10 rounded-full bg-gray-300 mr-4"></div>
      <p class="text-gray-700">xx point</p>
    </div>
  </div>

</div>