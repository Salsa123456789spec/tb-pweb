  <div class="max-w-3xl mx-auto px-4 py-8 bg-white rounded-xl shadow-md">
    <!-- Header: Judul & Deadline -->
    <div class="flex justify-between items-start mb-4">
      <div>
        <h1 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
          <span class="material-icons text-green-600">assignment</span>
          <%= tugas.judul %>
        </h1>
      </div>
      <div class="text-sm text-right text-gray-600">
        <span class="material-icons text-base align-middle text-gray-500">event</span>
        <%= new Date(tugas.deadline).toLocaleString('id-ID', { dateStyle: 'full', timeStyle: 'short' }) %>
      </div>
    </div>

    <!-- Kategori -->
    <div class="mb-4 text-sm text-green-700 bg-green-100 inline-block px-3 py-1 rounded-full font-medium">
      <%= tugas.kategori.replace('TUGAS_', 'Tugas ') %>
    </div>

    <!-- Deskripsi -->
    <div class="mb-6 text-gray-700 whitespace-pre-line">
      <%= tugas.deskripsi %>
    </div>

    <!-- Lampiran Admin -->
    <% if (tugas.lampiran) { %>
      <div class="mb-6 flex items-center text-blue-700 gap-2">
        <span class="material-icons">attach_file</span>
        <a href="/uploads/tugas/<%= tugas.lampiran %>" target="_blank" class="hover:underline">
          <%= tugas.lampiran %>
        </a>
      </div>
    <% } %>

    <!-- Status Pengumpulan -->
    <% if (pengumpulan) { %>
      <div class="bg-green-50 text-green-800 px-4 py-3 rounded mb-6 flex items-center gap-2">
        <span class="material-icons">check_circle</span>
        <div>
          Anda sudah mengumpulkan tugas:
          <a href="/uploads/tugas/<%= pengumpulan.file %>" target="_blank" class="hover:underline ml-1 text-green-700">
            <%= pengumpulan.file %>
          </a>
          <br/>
          <small class="text-green-600">Terakhir diperbarui: <%= new Date(pengumpulan.tanggal_kumpul).toLocaleString('id-ID',{ dateStyle: 'full', timeStyle: 'short' }) %></small>
        </div>
      </div>
    <% } %>

    <!-- Logika utama -->
    <% const isExpired = new Date(tugas.deadline) < new Date(); %>

    <% if (pengumpulan && pengumpulan.nilai !== null && pengumpulan.catatan) { %>
      <!-- Sudah Dinilai -->
      <div class="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-md">
        <h2 class="text-lg font-semibold text-blue-800 mb-2">Feedback</h2>
        <p><span class="font-medium text-gray-700">Nilai:</span> <%= pengumpulan.nilai %></p>
        <p><span class="font-medium text-gray-700">Catatan:</span> <%= pengumpulan.catatan %></p>
      </div>

    <% } else if (!isExpired) { %>
      <!-- Form Pengumpulan -->
      <form action="/mahasiswa/tugas/<%= tugas.id %>/submit" method="POST" enctype="multipart/form-data" class="space-y-4 mt-6">
        <div>
          <label for="file" class="block text-sm font-medium text-gray-700 mb-1">
            <% if (pengumpulan) { %>Ganti File Tugas Anda<% } else { %>Unggah Tugas Anda<% } %> (PDF, max 5MB):
          </label>
          <input type="file" name="file" id="file" accept=".pdf" required
            class="block w-full rounded-md p-2 border border-gray-300 text-sm text-gray-800 file:mr-3 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-semibold file:bg-green-100 file:text-green-700 hover:file:bg-green-200 transition"/>
        </div>
        <button type="submit"
          class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md flex items-center gap-2 transition">
          <span class="material-icons">upload</span>
          <% if (pengumpulan) { %>Update Tugas<% } else { %>Kirim Tugas<% } %>
        </button>
      </form>

    <% } else { %>
      <!-- Deadline Lewat -->
      <div class="bg-yellow-50 text-yellow-800 px-4 py-3 rounded flex items-center gap-2 mt-6">
        <span class="material-icons">warning</span>
        <strong>Pengumpulan tugas sudah ditutup.</strong>
      </div>
    <% } %>

    <!-- Tombol Kembali -->
    <div class="mt-8">
      <a href="/mahasiswa/tugas" class="text-gray-600 hover:text-gray-900 font-medium transition-colors flex items-center gap-1">
        <span class="material-icons text-base">arrow_back</span>
        Kembali ke Daftar Tugas
      </a>
    </div>
  </div>
