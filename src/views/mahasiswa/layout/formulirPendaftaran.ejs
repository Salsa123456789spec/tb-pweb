                            <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center">
                                <p class="text-gray-500 mb-2">drag and drop file here or</p>
                                <button type="button" class="px-4 py-2 bg-white border border-gray-300 rounded-md text-sm">Browse Files</button>
                                <p class="text-xs text-gray-500 mt-2">Max File Size : 2MB</p>
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-gray-700 mb-2">Upload KHS <span class="text-red-500">*</span></label>
                            <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center">
                                <p class="text-gray-500 mb-2">drag and drop file here or</p>
                                <button type="button" class="px-4 py-2 bg-white border border-gray-300 rounded-md text-sm">Browse Files</button>
                                <p class="text-xs text-gray-500 mt-2">Max File Size : 2MB</p>
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-gray-700 mb-2">Surat Permohonan</label>
                            <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center">
                                <p class="text-gray-500 mb-2">drag and drop file here or</p>
                                <button type="button" class="px-4 py-2 bg-white border border-gray-300 rounded-md text-sm">Browse Files</button>
                                <p class="text-xs text-gray-500 mt-2">Max File Size : 2MB</p>
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-gray-700 mb-2">Kenapa Kamu Mendaftar?</label>
                            <textarea rows="4" placeholder="Tuliskan alasan kamu mendaftar..." class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
                        </div>
                        
                        <div>
                            <label class="flex items-center">
                                <input type="checkbox" class="h-4 w-4 text-green-500 focus:ring-green-500 border-gray-300 rounded">
                                <span class="ml-2 text-gray-700">Permission & Agreement <span class="text-red-500">*</span></span>
                            </label>
                        </div>
                        
                        <div class="flex justify-end">
                            <button type="submit" class="px-6 py-3 bg-green-500 text-white font-medium rounded-lg shadow-md hover:shadow-lg transition duration-300">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- JavaScript for responsive behavior -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile responsive functionality
            const handleResize = () => {
                const isMobile = window.innerWidth < 768;
                // Adjust UI based on screen size
                // For a real implementation, you might show/hide elements or change layouts
            };
            
            // Initial call and event listener
            handleResize();
            window.addEventListener('resize', handleResize);
            
            // Form validation example
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    alert('Form submitted successfully!');
                });
            }
            
            // Smooth scrolling to form section
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
        });
    </script>
</body>
</html>
