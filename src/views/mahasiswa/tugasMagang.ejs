<div class="container mx-auto p-4">
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-2">Penugasan</h1>
        <p class="text-gray-600">
            Anda bisa melihat pembagian kelompok magang pada laman hasil seleksi wawancara atau klik
            <a href="/mahasiswa/kelompok" class="text-blue-600 underline">disini</a>.
        </p>
    </div>

    <% if (tugas.length > 0) { %>
        <!-- Belum Dikumpul -->
        <h2 class="text-xl font-semibold mb-4 text-red-600">Tugas Belum Dikumpul</h2>
        <% const tugasBelum = tugas.filter(item => item.status === 'belum_terkumpul'); %>
        <% if (tugasBelum.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
                <% tugasBelum.forEach(item => { %>
                    <div class="bg-white rounded-lg shadow-md border border-gray-200 hover:shadow-lg transition duration-300">
                        <div class="p-6">
                            <div class="flex items-center mb-4">
                                <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mr-4">
                                    <span class="material-icons text-red-500">assignment_late</span>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-lg font-semibold text-gray-800"><%= item.judul %></h3>
                                    <p class="text-sm text-gray-500">
                                        Tenggat: <%= new Date(item.deadline).toLocaleDateString('id-ID', {
                                            day: 'numeric', month: 'long', year: 'numeric'
                                        }) %>
                                    </p>
                                </div>
                            </div>

                            <div class="flex justify-end">
                                <a href="/mahasiswa/tugas/<%= item.id %>" 
                                   class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
                                    Tampilkan Detail
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-gray-600 mb-6">Semua tugas telah dikumpulkan. Mantap!</p>
        <% } %>

        <!-- Sudah Dikumpul -->
        <h2 class="text-xl font-semibold mb-4 text-green-600">Tugas Sudah Dikumpul</h2>
        <% const tugasKumpul = tugas.filter(item => item.status !== 'belum_terkumpul'); %>
        <% if (tugasKumpul.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% tugasKumpul.forEach(item => { %>
                    <div class="bg-white rounded-lg shadow-md border border-gray-200 hover:shadow-lg transition duration-300">
                        <div class="p-6">
                            <div class="flex items-center mb-4">
                                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                                    <span class="material-icons text-green-600">assignment_turned_in</span>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-lg font-semibold text-gray-800"><%= item.judul %></h3>
                                    <p class="text-sm text-gray-500">
                                        Tenggat: <%= new Date(item.deadline).toLocaleDateString('id-ID', {
                                            day: 'numeric', month: 'long', year: 'numeric'
                                        }) %>
                                    </p>
                                </div>
                            </div>

                            <div class="flex justify-between items-center">
                                <% if (item.status === 'terkumpul') { %>
                                    <span class="bg-green-500 text-white text-xs font-semibold px-2.5 py-1 rounded">Terkumpul</span>
                                <% } else if (item.status === 'terlambat') { %>
                                    <span class="bg-yellow-500 text-white text-xs font-semibold px-2.5 py-1 rounded">Terlambat</span>
                                <% } %>

                                <a href="/mahasiswa/tugas/<%= item.id %>" 
                                   class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
                                    Tampilkan Detail
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-gray-600 mb-6">Belum ada tugas yang dikumpulkan.</p>
        <% } %>
    <% } else { %>
        <p class="text-gray-600">Belum ada tugas yang tersedia saat ini.</p>
    <% } %>
</div>
