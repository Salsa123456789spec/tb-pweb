<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Penugasan</h1>
    <p class="mb-6">
        Anda bisa melihat pembagian kelompok magang pada laman hasil seleksi wawancara atau bisa dengan mengklik
        <a href="/mahasiswa/kelompok" class="text-blue-600">disini</a>.
    </p>

    <% if (tugas.length > 0) { %>
        <!-- Bagian Tugas Belum Dikumpul -->
        <h2 class="text-xl font-semibold mb-2 text-red-600">Tugas Belum Dikumpul</h2>
        <% const tugasBelum = tugas.filter(item => item.status === 'belum_terkumpul'); %>
        <% if (tugasBelum.length > 0) { %>
            <% tugasBelum.forEach(item => { %>
                <div class="bg-white border border-gray-200 rounded-lg p-4 mb-4">
                    <div class="flex justify-between items-center mb-2">
                        <h2 class="text-lg font-semibold"><%= item.judul %></h2>
                        <span class="bg-red-500 text-white text-xs font-semibold mr-2 px-2.5 py-0.5 rounded">
                            Belum Dikumpul
                        </span>
                    </div>
                    <p class="text-sm text-gray-600 mb-4">
                        Tenggat <%= new Date(item.deadline).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                    </p>
                    <a href="/mahasiswa/tugas/<%= item.id %>" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">
                        Tampilkan Detail
                    </a>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-gray-600 mb-4">Semua tugas telah dikumpul. Mantap!</p>
        <% } %>

        <!-- Bagian Tugas Telah Dikumpul -->
        <h2 class="text-xl font-semibold mt-10 mb-2 text-green-600">Tugas Telah Dikumpul</h2>
        <% const tugasKumpul = tugas.filter(item => item.status !== 'belum_terkumpul'); %>
        <% if (tugasKumpul.length > 0) { %>
            <% tugasKumpul.forEach(item => { %>
                <div class="bg-white border border-gray-200 rounded-lg p-4 mb-4">
                    <div class="flex justify-between items-center mb-2">
                        <h2 class="text-lg font-semibold"><%= item.judul %></h2>
                        <% if (item.status === 'terkumpul') { %>
                            <span class="bg-green-500 text-white text-xs font-semibold mr-2 px-2.5 py-0.5 rounded">Terkumpul</span>
                        <% } else if (item.status === 'terlambat') { %>
                            <span class="bg-yellow-500 text-white text-xs font-semibold mr-2 px-2.5 py-0.5 rounded">Terlambat</span>
                        <% } %>
                    </div>
                    <p class="text-sm text-gray-600 mb-4">
                        Tenggat <%= new Date(item.deadline).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                    </p>
                    <a href="/mahasiswa/tugas/<%= item.id %>" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">
                        Tampilkan Detail
                    </a>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-gray-600 mb-4">Belum ada tugas yang dikumpulkan.</p>
        <% } %>
    <% } else { %>
        <p>Belum ada tugas yang tersedia.</p>
    <% } %>
</div>
