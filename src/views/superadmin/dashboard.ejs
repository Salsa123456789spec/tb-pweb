<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Admin Dashboard - LeaAnjayy</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'purple-custom': '#667eea',
                        'purple-dark': '#764ba2'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100 font-sans">
    <!-- Role Switcher -->
    <div class="fixed top-4 right-4 z-50">
        <div class="bg-gradient-to-r from-purple-500 to-indigo-500 text-white px-4 py-2 rounded-lg shadow-lg">
            <select id="roleSwitch" class="bg-transparent text-white border-none outline-none" onchange="switchRole(this.value)">
                <option value="super-admin" selected>Super Admin</option>
                <option value="admin">Admin</option>
                <option value="aslab">Aslab</option>
            </select>
        </div>
    </div>

    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-gradient-to-b from-purple-custom to-purple-dark text-white flex flex-col">
            <!-- Logo Section -->
            <div class="p-6 border-b border-purple-400">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-graduation-cap text-white text-lg"></i>
                    </div>
                    <span class="text-xl font-bold">LeaAnjayy</span>
                </div>
            </div>

            <!-- Navigation Menu -->
            <nav class="flex-1 py-4">
                <div class="sidebar-item bg-purple-600 border-l-4 border-white flex items-center px-6 py-3 cursor-pointer hover:bg-purple-500 transition-colors" 
                     onclick="switchMenu('dashboard')" data-menu="dashboard">
                    <i class="fas fa-home w-5 mr-3"></i>
                    <span>Dashboard</span>
                </div>

                <div class="sidebar-item flex items-center px-6 py-3 cursor-pointer hover:bg-purple-500 transition-colors" 
                     onclick="switchMenu('aslab-management')" data-menu="aslab-management">
                    <i class="fas fa-users-cog w-5 mr-3"></i>
                    <span>Kelola Aslab</span>
                </div>

                <div class="sidebar-item flex items-center px-6 py-3 cursor-pointer hover:bg-purple-500 transition-colors" 
                     onclick="switchMenu('schedule-management')" data-menu="schedule-management">
                    <i class="fas fa-calendar-alt w-5 mr-3"></i>
                    <span>Jadwal Pendaftaran</span>
                </div>

                <div class="sidebar-item flex items-center px-6 py-3 cursor-pointer hover:bg-purple-500 transition-colors" 
                     onclick="switchMenu('user-management')" data-menu="user-management">
                    <i class="fas fa-users w-5 mr-3"></i>
                    <span>Kelola User</span>
                </div>

                <div class="dropdown" data-dropdown="system">
                    <div class="sidebar-item flex items-center px-6 py-3 cursor-pointer hover:bg-purple-500 transition-colors" 
                         onclick="toggleDropdown(this)" data-menu="system">
                        <i class="fas fa-cogs w-5 mr-3"></i>
                        <span>System</span>
                        <i class="fas fa-angle-right ml-auto dropdown-arrow transform transition-transform duration-200"></i>
                    </div>
                    <div class="dropdown-content bg-purple-700 hidden">
                        <div class="sidebar-item px-6 py-2 text-sm cursor-pointer hover:bg-purple-600 transition-colors pl-12" 
                             onclick="switchMenu('system-settings')" data-menu="system-settings">
                            Pengaturan Sistem
                        </div>
                        <div class="sidebar-item px-6 py-2 text-sm cursor-pointer hover:bg-purple-600 transition-colors pl-12" 
                             onclick="switchMenu('backup')" data-menu="backup">
                            Backup & Restore
                        </div>
                        <div class="sidebar-item px-6 py-2 text-sm cursor-pointer hover:bg-purple-600 transition-colors pl-12" 
                             onclick="switchMenu('logs')" data-menu="logs">
                            System Logs
                        </div>
                    </div>
                </div>

                <div class="sidebar-item flex items-center px-6 py-3 cursor-pointer hover:bg-purple-500 transition-colors" 
                     onclick="switchMenu('analytics')" data-menu="analytics">
                    <i class="fas fa-chart-line w-5 mr-3"></i>
                    <span>Analytics</span>
                </div>

                <div class="sidebar-item flex items-center px-6 py-3 cursor-pointer hover:bg-purple-500 transition-colors" 
                     onclick="switchMenu('reports')" data-menu="reports">
                    <i class="fas fa-file-chart-line w-5 mr-3"></i>
                    <span>Reports</span>
                </div>

                <div class="sidebar-item flex items-center px-6 py-3 cursor-pointer hover:bg-purple-500 transition-colors" 
                     onclick="switchMenu('monitoring')" data-menu="monitoring">
                    <i class="fas fa-desktop w-5 mr-3"></i>
                    <span>Monitoring</span>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Header -->
            <header class="bg-white shadow-sm border-b border-gray-200 px-6 py-4">
                <div class="flex justify-between items-center">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-800" id="page-title">Super Admin Dashboard</h1>
                        <span class="text-sm text-purple-600 font-medium" id="role-badge">Super Administrator</span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <div class="relative">
                            <button class="flex items-center space-x-2 bg-gray-100 px-4 py-2 rounded-lg hover:bg-gray-200 transition-colors">
                                <span class="text-gray-700 font-medium">Rafi</span>
                                <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                                    <i class="fas fa-user-shield text-white text-sm"></i>
                                </div>
                            </button>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <main class="flex-1 p-6" id="main-content">
                <!-- Dashboard Content -->
                <div id="dashboard-content">
                    <!-- Super Admin Stats -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-500">
                            <div class="flex items-center">
                                <div class="p-3 rounded-full bg-blue-100">
                                    <i class="fas fa-users text-blue-500 text-xl"></i>
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-gray-500 text-sm font-medium">Total Users</h3>
                                    <p class="text-2xl font-bold text-gray-900">1,245</p>
                                    <span class="text-xs text-green-600">+12% from last month</span>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-purple-500">
                            <div class="flex items-center">
                                <div class="p-3 rounded-full bg-purple-100">
                                    <i class="fas fa-users-cog text-purple-500 text-xl"></i>
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-gray-500 text-sm font-medium">Active Aslabs</h3>
                                    <p class="text-2xl font-bold text-gray-900">23</p>
                                    <span class="text-xs text-green-600">3 new this week</span>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-500">
                            <div class="flex items-center">
                                <div class="p-3 rounded-full bg-green-100">
                                    <i class="fas fa-calendar-check text-green-500 text-xl"></i>
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-gray-500 text-sm font-medium">Registration Status</h3>
                                    <p class="text-lg font-bold text-green-600">OPEN</p>
                                    <span class="text-xs text-gray-600">Until March 15, 2024</span>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-red-500">
                            <div class="flex items-center">
                                <div class="p-3 rounded-full bg-red-100">
                                    <i class="fas fa-server text-red-500 text-xl"></i>
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-gray-500 text-sm font-medium">System Health</h3>
                                    <p class="text-lg font-bold text-green-600">HEALTHY</p>
                                    <span class="text-xs text-gray-600">99.9% uptime</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions & Recent Activities -->
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
                        <!-- Quick Actions -->
                        <div class="bg-white rounded-lg shadow-md p-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                <i class="fas fa-bolt text-yellow-500 mr-2"></i>
                                Quick Actions
                            </h3>
                            <div class="grid grid-cols-2 gap-4">
                                <button onclick="openModal('addAslabModal')" 
                                        class="bg-gradient-to-r from-blue-500 to-blue-600 text-white p-4 rounded-lg hover:from-blue-600 hover:to-blue-700 transition-all flex flex-col items-center shadow-lg">
                                    <i class="fas fa-user-plus text-2xl mb-2"></i>
                                    <span class="text-sm font-medium">Add Aslab</span>
                                </button>
                                <button onclick="openModal('scheduleModal')" 
                                        class="bg-gradient-to-r from-green-500 to-green-600 text-white p-4 rounded-lg hover:from-green-600 hover:to-green-700 transition-all flex flex-col items-center shadow-lg">
                                    <i class="fas fa-calendar-cog text-2xl mb-2"></i>
                                    <span class="text-sm font-medium">Schedule Settings</span>
                                </button>
                                <button onclick="switchMenu('backup')" 
                                        class="bg-gradient-to-r from-purple-500 to-purple-600 text-white p-4 rounded-lg hover:from-purple-600 hover:to-purple-700 transition-all flex flex-col items-center shadow-lg">
                                    <i class="fas fa-database text-2xl mb-2"></i>
                                    <span class="text-sm font-medium">Backup Data</span>
                                </button>
                                <button onclick="switchMenu('analytics')" 
                                        class="bg-gradient-to-r from-orange-500 to-orange-600 text-white p-4 rounded-lg hover:from-orange-600 hover:to-orange-700 transition-all flex flex-col items-center shadow-lg">
                                    <i class="fas fa-chart-bar text-2xl mb-2"></i>
                                    <span class="text-sm font-medium">View Analytics</span>
                                </button>
                            </div>
                        </div>

                        <!-- Recent Activities -->
                        <div class="bg-white rounded-lg shadow-md p-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                <i class="fas fa-history text-blue-500 mr-2"></i>
                                Recent Activities
                            </h3>
                            <div class="space-y-3">
                                <div class="flex items-center justify-between p-3 bg-blue-50 rounded-lg border-l-4 border-blue-400">
                                    <div class="flex items-center">
                                        <i class="fas fa-user-plus text-blue-500 mr-3"></i>
                                        <span class="text-sm">New aslab added: John Doe</span>
                                    </div>
                                    <span class="text-xs text-gray-500">2 hours ago</span>
                                </div>
                                <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg border-l-4 border-green-400">
                                    <div class="flex items-center">
                                        <i class="fas fa-calendar-check text-green-500 mr-3"></i>
                                        <span class="text-sm">Registration period extended</span>
                                    </div>
                                    <span class="text-xs text-gray-500">5 hours ago</span>
                                </div>
                                <div class="flex items-center justify-between p-3 bg-purple-50 rounded-lg border-l-4 border-purple-400">
                                    <div class="flex items-center">
                                        <i class="fas fa-database text-purple-500 mr-3"></i>
                                        <span class="text-
