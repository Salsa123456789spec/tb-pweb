<div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-2">Status Web Recruitment</h2>
    <p class="text-gray-600 mb-6">Kontrol akses pendaftaran untuk calon pelamar.</p>

    <!-- Status Saat Ini -->
    <div class="mb-8 flex flex-col items-center">
        <div class="text-lg font-semibold mb-3">Status Saat Ini:</div>
        <!-- Logika untuk menampilkan status BUKA/TUTUP akan ditambahkan di sini -->
        <% if (isOprecOpen) { %>
            <div id="status-display" class="bg-green-500 text-white font-bold py-3 px-8 rounded-full flex items-center gap-3 text-xl shadow-lg">
                <span class="w-3 h-3 bg-white rounded-full animate-pulse"></span>
                WEB DIBUKA
            </div>
        <% } else { %>
            <div id="status-display" class="bg-red-500 text-white font-bold py-3 px-8 rounded-full flex items-center gap-3 text-xl shadow-lg">
                <span class="w-3 h-3 bg-white rounded-full animate-pulse"></span>
                WEB TERTUTUP
            </div>
        <% } %>
    </div>

    <!-- Tombol Aksi -->
    <div class="flex justify-center items-center gap-6">
        <form id="open-form" action="/superadmin/manajemen-oprec/buka" method="POST">
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-md flex items-center gap-2 transition-transform transform hover:scale-105">
                <span class="w-2.5 h-2.5 bg-white rounded-full"></span>
                Buka Web
            </button>
        </form>

        <form id="close-form" action="/superadmin/manajemen-oprec/tutup" method="POST">
            <button type="submit" class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-2 px-6 rounded-md flex items-center gap-2 transition-transform transform hover:scale-105">
                <span class="w-2.5 h-2.5 bg-black rounded-full"></span>
                Tutup Web
            </button>
        </form>
    </div>
</div>

<!-- Script untuk SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById('open-form').addEventListener('submit', function (e) {
        e.preventDefault();
        Swal.fire({
            title: 'Anda yakin?',
            text: "Anda akan membuka akses pendaftaran untuk semua user.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#16a34a', // green-600
            cancelButtonColor: '#d33',
            confirmButtonText: 'Ya, buka web!',
            cancelButtonText: 'Batal'
        }).then((result) => {
            if (result.isConfirmed) {
                e.target.submit();
            }
        });
    });

    document.getElementById('close-form').addEventListener('submit', function (e) {
        e.preventDefault();
        Swal.fire({
            title: 'Anda yakin?',
            text: "Semua halaman user akan dinonaktifkan sementara.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#16a34a',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Ya, tutup web!',
            cancelButtonText: 'Batal'
        }).then((result) => {
            if (result.isConfirmed) {
                e.target.submit();
            }
        });
    });
</script> 